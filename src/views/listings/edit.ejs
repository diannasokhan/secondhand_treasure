<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

        <% include ../static/partials/messages.ejs %>
        
      <h1>Edit Listing</h1>


      <form action="/listings/<%= listing.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Title:</label>

          <input value="<%= listing.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp">
        </div>
        <div class="form-group">
            <label for="type">Type:</label>
  
            <input value="<%= listing.type %>" type="text" class="form-control" name="type" aria-describedby="typeHelp" >
        </div>
        <div class="form-group">
            <label for="size">Size: </label>
  
            <input value="<%= listing.size %>" type="text" class="form-control" name="size" aria-describedby="sizeHelp" >
        </div>
        <div class="form-group">
          <label for="title">Color:</label>

          <input value="<%= listing.color %>" type="text" class="form-control" name="color" aria-describedby="colorHelp">
        </div>
        <div class="form-group">
          <label for="description">Description:</label>

          <textarea rows="4" class="form-control" name="description" ><%= listing.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>